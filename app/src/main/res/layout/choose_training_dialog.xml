<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/viberite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/bottom_border"
        android:textColor="#575555"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        android:text="@string/choose_training"
        android:layout_gravity="center"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:paddingBottom="10dp"
        android:id="@+id/cl_cards"
        app:layout_constraintTop_toBottomOf="@id/viberite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cards_image"
            app:layout_constraintTop_toTopOf="@id/cl_cards"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_card_multiple"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cards" />
        <TextView
            android:id="@+id/cards"
            app:layout_constraintTop_toTopOf="@id/cards_image"
            app:layout_constraintBottom_toBottomOf="@id/cards_image"
            app:layout_constraintLeft_toRightOf="@id/cards_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="#575454"
            android:text="@string/cards" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_choice"
        app:layout_constraintTop_toBottomOf="@id/cl_cards"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/choice_image"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_playlist_check"
            android:layout_height="wrap_content"
            android:contentDescription="@string/accordance" />
        <TextView
            android:id="@+id/choice"
            app:layout_constraintTop_toTopOf="@id/choice_image"
            app:layout_constraintLeft_toRightOf="@id/choice_image"
            app:layout_constraintBottom_toBottomOf="@id/choice_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="#575454"
            android:text="@string/accordance" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_write"
        app:layout_constraintTop_toBottomOf="@id/cl_choice"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/write_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:contentDescription="@string/orthography"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/write"
            app:layout_constraintTop_toTopOf="@id/write_image"
            app:layout_constraintBottom_toBottomOf="@id/write_image"
            app:layout_constraintLeft_toRightOf="@id/write_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="#575454"
            android:text="@string/orthography" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/ok"
        app:layout_constraintTop_toBottomOf="@id/cl_write"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
